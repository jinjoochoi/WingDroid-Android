<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtvNew"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                style="@style/TextStyle.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/news_new" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recvNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include layout="@layout/border" />

            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtvIssue"
                    style="@style/TextStyle.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/news_events" />
                <ImageView
                    android:id="@+id/imgvFilter"
                    android:layout_width="@dimen/ic_filter_width"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/ic_filter_height"
                    android:src="@drawable/ic_filter"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recvEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>
    z
</RelativeLayout>