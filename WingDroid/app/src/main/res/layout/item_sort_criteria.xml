<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerSort"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtvSort"
        style="@style/TextStyle.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_by_recent" />

    <ImageView
        android:id="@+id/imgvArrow"
        android:layout_width="@dimen/ic_arrow_bottom_width"
        android:layout_height="@dimen/ic_arrow_bottom_hegiht"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_arrow_bottom"
        android:tint="@color/greyDark" />
</LinearLayout>
